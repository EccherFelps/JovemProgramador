@model List<AlunoModel>

@{
    ViewData["Title"] = "Alunos";
}

@if (ViewData["Mensagem"] != null)
{
    <div class="alert-danger">
        @ViewData["Mensagem"]
    </div>
}

@if (ViewData["Mensagem"] != null)
{
    <div class="alert-success">
        @ViewData["Mensagem3"]
    </div>
}

<div class="text-left">
    <div>
        <h1>Dados dos Alunos</h1>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>

                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">Email</th>
                <th scope="col">Cep</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>
                        <td> @aluno.Nome</td>
                        <td> @aluno.Idade</td>
                        <td> @aluno.Contato</td>
                        <td> @aluno.Email</td>
                        <td> @aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <a type="submit" class="btn btn-dark" role="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-id="@aluno.Cep">Endereco</a>
                                <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                                <a type="submit" class="btn btn-danger" role="button" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="text-center">
        <a type="button" class="btn btn-success" asp-controller="Aluno" asp-action="Adicionar">Adicionar Aluno </a>
        <a type="button" class="btn btn-warning" asp-controller="Aluno" asp-action="Filtro"> Filtro </a>
        <a type="button" class="btn btn-danger" asp-controller="Aluno" asp-action="Index"> Voltar </a>
    </div>
</div>



